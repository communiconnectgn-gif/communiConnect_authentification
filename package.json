{
  "name": "communiconnect",
  "version": "1.0.0",
  "description": "Plateforme web communautaire pour connecter les habitants d'un mÃªme quartier, ville ou pays",
  "main": "server/index.js",
  "scripts": {
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "cd server && npm run dev",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-all": "npm install && cd server && npm install && cd ../client && npm install",
    "start": "cd server && npm start",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:auth": "jest tests/auth.test.js",
    "test:integration": "jest tests/integration-complete.test.js",
    "deploy": "node deploy-automatique.js",
    "deploy:vercel": "vercel --prod",
    "deploy:test": "node test-deploiement.js",
    "deploy:build": "npm run install-all && cd client && npm run build && cd .."
  },
  "keywords": [
    "community",
    "social",
    "guinea",
    "neighborhood",
    "help",
    "alerts"
  ],
  "author": "CommuniConnect Team",
  "license": "MIT",
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "axios": "^1.11.0",
    "colors": "^1.4.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.0.1",
    "hpp": "^0.2.3",
    "puppeteer": "^24.15.0",
    "rate-limit-redis": "^4.2.1",
    "redis": "^5.8.0",
    "socket.io-client": "^4.8.1",
    "winston": "^3.17.0",
    "xss-clean": "^0.1.4"
  }
}
