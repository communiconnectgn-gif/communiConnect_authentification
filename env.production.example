# Configuration Production CommuniConnect
NODE_ENV=production
PORT=5000

# MongoDB Atlas
MONGODB_URI=mongodb+srv://your-username:your-password@your-cluster.mongodb.net/communiconnect?retryWrites=true&w=majority

# JWT
JWT_SECRET=communiconnect-production-secret-key-2024
JWT_EXPIRE=7d

# CORS
CORS_ORIGIN=https://your-domain.com

# Redis (optionnel)
REDIS_URL=redis://localhost:6379

# Firebase (optionnel)
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Email (optionnel)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Logs
LOG_LEVEL=info 